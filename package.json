{
  "name": "mukaigawara-tools",
  "displayName": "Mukaigawara Tools",
  "description": "A collection of tools for Mukaigawara development.",
  "publisher": "mukaigawara",
  "repository": {
    "type": "git",
    "url": "https://github.com/mukaigawara/mukaigawara-tools"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "rails",
    "ruby",
    "terminal",
    "docker",
    "rspec",
    "rubocop",
    "development"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "railsToolsContainer",
          "title": "Rails Tools",
          "icon": "./icons/ris.svg"
        }
      ]
    },
    "views": {
      "railsToolsContainer": [
        {
          "id": "railsToolsView",
          "name": "Rails Tools"
        }
      ]
    },
    "commands": [
      {
        "command": "railstools.clearTerminal",
        "title": "Clear Terminal",
        "category": "Rails Tools",
        "icon": "$(clear-all)"
      },
      {
        "command": "railstools.newTerminal",
        "title": "New Terminal",
        "category": "Rails Tools",
        "icon": "$(add)"
      },
      {
        "command": "railstools.runDocker",
        "title": "Run Docker Bash",
        "category": "Rails Tools",
        "icon": "$(terminal)"
      },
      {
        "command": "railstools.setEnv",
        "title": "Set RAILS_ENV=test",
        "category": "Rails Tools",
        "icon": "$(gear)"
      },
      {
        "command": "railstools.runRspec",
        "title": "Run RSpec",
        "category": "Rails Tools",
        "icon": "$(beaker)"
      },
      {
        "command": "railstools.runRubocop",
        "title": "Run Rubocop",
        "category": "Rails Tools",
        "icon": "$(wrench)"
      },
      {
        "command": "railstools.runRubocopAll",
        "title": "Run Rubocop All",
        "category": "Rails Tools",
        "icon": "$(tools)"
      },
      {
        "command": "railstools.refresh",
        "title": "Refresh",
        "category": "Rails Tools",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "railstools.refresh",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Mukaigawara Tools",
      "properties": {
        "mukaigawaratools.dockerCommand": {
          "type": "string",
          "default": "docker compose exec -it web bash",
          "description": "Docker bashコマンド"
        },
        "mukaigawaratools.testEnv": {
          "type": "string",
          "default": "RAILS_ENV=test",
          "description": "テスト環境変数"
        },
        "mukaigawaratools.clearCommand": {
          "type": "string",
          "default": "clear",
          "description": "ターミナルクリアコマンド (Windows: cls, Mac/Linux: clear)"
        },
        "mukaigawaratools.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "コマンド実行時に通知を表示"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  }
}
